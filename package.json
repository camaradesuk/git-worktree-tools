{
  "name": "@camaradesuk/git-worktree-tools",
  "version": "1.8.0",
  "description": "Git worktree workflow tools: create PRs, manage worktrees, sync configs. Cross-platform CLI for Windows, macOS, and Linux.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "wt": "./dist/cli/wt.js",
    "newpr": "./dist/cli/newpr.js",
    "cleanpr": "./dist/cli/cleanpr.js",
    "lswt": "./dist/cli/lswt.js",
    "wtlink": "./dist/cli/wtlink.js",
    "wtstate": "./dist/cli/wtstate.js",
    "wtconfig": "./dist/cli/wtconfig.js",
    "git-worktree-mcp": "./dist/mcp/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci:lint": "npm run lint && npm run format:check && npm run build",
    "prepare": "husky",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "git",
    "worktree",
    "pr",
    "pull-request",
    "github",
    "workflow",
    "cli",
    "cross-platform"
  ],
  "author": "CAMARADES UK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/camaradesuk/git-worktree-tools.git"
  },
  "bugs": {
    "url": "https://github.com/camaradesuk/git-worktree-tools/issues"
  },
  "homepage": "https://github.com/camaradesuk/git-worktree-tools#readme",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "schemas",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@preact/signals-core": "^1.8.0",
    "inquirer": "^9.3.7",
    "json5": "^2.2.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.19.27",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "node-pty": "^1.1.0",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.50.1",
    "vitest": "^2.1.9"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
