{
  "name": "@camaradesuk/git-worktree-tools",
  "version": "1.0.3",
  "description": "Git worktree workflow tools: create PRs, manage worktrees, sync configs. Cross-platform CLI for Windows, macOS, and Linux.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "newpr": "./dist/cli/newpr.js",
    "cleanpr": "./dist/cli/cleanpr.js",
    "lswt": "./dist/cli/lswt.js",
    "wtlink": "./dist/cli/wtlink.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "git",
    "worktree",
    "pr",
    "pull-request",
    "github",
    "workflow",
    "cli",
    "cross-platform"
  ],
  "author": "CAMARADES UK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/camaradesuk/git-worktree-tools.git"
  },
  "bugs": {
    "url": "https://github.com/camaradesuk/git-worktree-tools/issues"
  },
  "homepage": "https://github.com/camaradesuk/git-worktree-tools#readme",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@preact/signals-core": "^1.8.0",
    "inquirer": "^9.3.7",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.19.27",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.50.1",
    "vitest": "^2.1.9"
  }
}
