{
  "$schema": "https://unpkg.com/@camaradesuk/git-worktree-tools/schemas/worktreerc.schema.json",
  "baseBranch": "main",
  "draftPr": false,
  "worktreePattern": "{repo}.pr{number}",
  "worktreeParent": "..",
  "branchPrefix": "feat",
  "sharedRepos": [],
  "syncPatterns": ["node_modules"],
  "ai": {
    "provider": "auto",
    "branchName": true,
    "prTitle": true,
    "prDescription": true,
    "commitMessage": true
  },
  "hooks": {
    "post-worktree": "cd {{WORKTREE_PATH}} && npm install && code . && wt link link --yes"
  }
}
